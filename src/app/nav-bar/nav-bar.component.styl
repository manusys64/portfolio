.navbar
  .container-fluid
    padding: 0

.navbar-header
  width: 100%
nav
  padding: 0

#myNavbar
  background-color: #1d1d1d
  opacity: 0.7

#menu-button
  font-size: 30px
  float: right
  margin: 10px 10px 10px 10px
  display: block
  i
    color: royalblue

.nav-icon
  display: inline-block
  width: 20%
  text-align: center
  i
    color: #4d4d4e
    font-size: 25px
    margin-top: 1rem
  p
    display: none
    margin-top: 1rem
    font-size: 12px

.navbar-brand
  font-size: 25px
  padding-top: 17px
  margin-left: 10px

.active
  i
	  color: royalBlue !important

.clicked
  i
    display: none
  p
    display: block
    color: royalBlue

.side-icon
  font-size: 22px
  color: #4d4d4e
  display: block
  line-height: 51px
  height: 51px
  position: relative
  text-decoration: none
  p
    display: none

.side-icon:hover
  p
    display: block
    color: royalblue
    font-size: 13px
  i
    display: none

.side-link
  position: absolute
  bottom: 20px
  width: 100%
  display: block
  padding: 0
  list-style: none
  text-align: center
  margin: 0
  a
    padding: 7px 0
    display: block
    font-size: 15px
    line-height: 16px
    color: #4d4d4e
  i:hover
    color: royalblue

@media only screen and (min-width : 992px) {
  #nav-bar {
    background: #181818;
    width: 60px;
    height: 100%;
    position: absolute;
    top: 0;
    z-index: 3;
    min-height: 500px;
    left: 0;
  }
  nav {
    display: block;
    text-align: center;
    position: absolute
    height: 210px;
    top: 30%;
    width: 100%;
  }
}
