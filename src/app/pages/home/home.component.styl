#home-page
  width: 80%
  h1
    color: white

  h2
    color: #8d8d8d
    font-size: 1.5rem
    margin-top: 20px
    margin-bottom: 30px
  a
    font-size: 13px
    letter-spacing: 4px
    font-family: "Open Sans",sans-serif
    text-decoration: none
    padding: 10px 18px
    border: 1px solid royalblue

  a:hover
    background-color: royalblue
    color: #333

#background
  height: 100%
  width: 100%
  background-image: url('https://i.giphy.com/media/QUXK4fFx8kYci4mcar/giphy.webp')
  background-repeat: no-repeat
  background-size: cover
  position: absolute
  opacity: 0.96
  z-index: -1
  top: 0
