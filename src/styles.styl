body, app-root
  height: 100%

body
  background: #1d1d1d

p
  color: white

.page
  margin: 0
  margin-left: 30px
  margin-right: 30px
  margin-bottom: 20px
  h1
    color: royalblue
    margin-bottom: 20px

.top
  margin-top: 30px

  .left-page
    margin-bottom: 50px

@media only screen and (min-width : 768px) {
  .page {
    margin-bottom: 0px;
  }
}

@media only screen and (min-width : 1024px) {
  .page {
    margin-left: 10%;
  }
  .top {
    margin-top: 10%;
  }
  .page-top {
    margin-top: 16%
  }
}
